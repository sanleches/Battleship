<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Pos?>

<VBox fx:id="initialSetupRoot" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.battleship.InitialSetupController" alignment="CENTER">
    <children>
        <VBox alignment="CENTER" spacing="20">
            <Label text="Enter your username:" style="-fx-text-fill: white; -fx-font-size: 28px;" alignment="CENTER" />
            <TextField fx:id="usernameField" alignment="CENTER" prefWidth="60" prefHeight="40" style="-fx-font-size: 16px;" />
            <HBox alignment="CENTER" spacing="20">
                <Button fx:id="onlineButton" text="Online Game" />
                <Button fx:id="offlineButton" text="Offline Game" />
            </HBox>
        </VBox>
    </children>
    <padding>
        <Insets top="50" right="50" bottom="50" left="50"/>
    </padding>
    <style>
        -fx-background-color: #101B27;
    </style>
</VBox>
